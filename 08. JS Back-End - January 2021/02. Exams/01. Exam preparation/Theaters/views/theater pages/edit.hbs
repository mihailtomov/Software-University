<main>
    <form class="theater-form" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" placeholder="Theater name" value="{{play.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{play.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" placeholder="Image Url" value="{{play.imageUrl}}">
        </div>
        <div class="check">

            {{#if play.isPublic}}
            <input type="checkbox" name="isPublic" id="check-box" checked>
            {{else}}
            <input type="checkbox" name="isPublic" id="check-box">
            {{/if}}

            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>