<main>
    <div class="container">

        <section class="details">
            <h1>Theater title: {{play.title}}</h1>
            <div>
                <img src="{{play.imageUrl}}" />
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{play.description}}</p>
            <div class="buttons">

                {{#if creator}}
                <a class="btn delete" href="/theater/delete/{{play._id}}">Delete</a>
                <a class="btn edit" href="/theater/edit/{{play._id}}">Edit</a>
                {{else}}
                    {{#if hasLiked}}
                        <span class="liked">You have already liked this play!</span>
                    {{else}}
                        <a class="btn like" href="/theater/like/{{play._id}}">Like</a>
                    {{/if}}
                {{/if}}
                
            </div>
        </section>
    </div>
</main>